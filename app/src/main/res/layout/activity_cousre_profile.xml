<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/header_holder"
            android:background="@drawable/down_arch"
            android:elevation="10dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/course_code_header"
                android:textSize="30sp"
                android:layout_centerInParent="true"
                android:text="CSE-207"
                style="@style/courseItemStyle" />

            <TextView
                android:paddingTop="16dp"
                android:id="@+id/course_name_header"
                android:text="Database System Management"
                android:textSize="20sp"
                android:layout_below="@id/course_code_header"
                android:layout_centerInParent="true"
                style="@style/courseItemStyle"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_edit"
                app:backgroundTint="#f47100"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:fabSize="normal" />
        </RelativeLayout>

         <TextView
             android:id="@+id/test1"
            android:gravity="center"
            android:text="test"
            android:layout_below="@id/header_holder"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

        <TextView
            android:gravity="center"
            android:text="test"
            android:layout_below="@id/test1"
            android:layout_width="match_parent"
            android:layout_height="500dp" />
    </RelativeLayout>

</ScrollView>